{
  "name": "nestjs-microservices-kafka",
  "version": "0.0.1",
  "description": "NestJS Microservices with Kafka",
  "author": "Pham Ngoc Hung",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "concurrently -c auto pnpm:build-*",
    "build-gateway": "nest build gateway",
    "build-user": "nest build user",
    "build-product": "nest build product",
    "start": "concurrently -c auto pnpm:start-*",
    "start-gateway": "nest start gateway",
    "start-user": "nest start user",
    "start-product": "nest start product",
    "start:dev": "concurrently -c auto pnpm:dev-*",
    "dev-gateway": "nest start --watch gateway",
    "dev-user": "nest start --watch user",
    "dev-product": "nest start --watch product",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/user/main",
    "user:typeorm": "env-cmd -f apps/user/.env.local typeorm-ts-node-commonjs -d apps/user/database/data-source.ts",
    "user:migration:up": "pnpm user:typeorm migration:run",
    "user:migration:down": "pnpm user:typeorm migration:revert",
    "user:migration:show": "pnpm user:typeorm migration:show",
    "user:migration:create": "typeorm migration:create",
    "user:migration:generate": "pnpm user:typeorm migration:generate --pretty",
    "user:schema:drop": "pnpm user:typeorm schema:drop",
    "user:schema:sync": "pnpm user:typeorm schema:sync",
    "user:schema:log": "pnpm user:typeorm schema:log",
    "user:db:create": "env-cmd -f apps/user/.env.local ts-node node_modules/typeorm-extension/bin/cli.cjs db:create -d apps/user/database/data-source.ts",
    "user:db:drop": "env-cmd -f apps/user/.env.local ts-node node_modules/typeorm-extension/bin/cli.cjs db:drop -d apps/user/database/data-source.ts",
    "user:seed:run": "env-cmd -f apps/user/.env.local ts-node node_modules/typeorm-extension/bin/cli.cjs seed:run -d apps/user/database/data-source.ts",
    "user:seed:create": "env-cmd -f apps/user/.env.local ts-node node_modules/typeorm-extension/bin/cli.cjs seed:create -d apps/user/database/data-source.ts",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@keyv/redis": "^4.3.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.12",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/typeorm": "^11.0.0",
    "argon2": "^0.41.1",
    "cache-manager": "^6.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^9.1.2",
    "kafkajs": "^2.2.4",
    "ms": "^2.1.3",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.21",
    "typeorm-extension": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.13.13",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "packageManager": "pnpm@10.6.5",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "argon2"
    ]
  }
}
